<div class="page-body">
  <div class="row">
    <div class="col">
      {{> blog-post post=post overflow="overflow-scroll" maxHeight='450px' }}    
    </div>
    <div class="col">
      <div class="row">
        <div class="card px-0">
          <div class="card-header pt-3">
            <h5 class="card-title">Comment</h5>
          </div>
          <div class="card-body">
            <textarea class="form-control" rows="3"></textarea>
          </div>
          <div class="d-flex justify-content-center pb-3">
            <button class="btn btn-primary" type="submit" id="submit-post-comment">Submit</button>
          </div>
        </div>
      </div>
      <div class="row mt-1">
        <div class="card px-0">
          <div class="card-header">
            <h5>Comments</h5>
          </div>
          <div class="card-body" id="comments-container" style="max-height: 280px; overflow: scroll;">
            {{#each comments}}
              {{> comment-card comment=this }}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/comment-handler.js"></script>