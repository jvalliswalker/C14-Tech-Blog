<div class="container mt-3 login-box">
  <div class="row border border-5 border-black">
    <section class="col p-0">
      <div class="m-0 p-0 background-black text-color-white">
        <h3 class="mx-3 pb-2">Sign In</h3>
      </div>
      <form id="form-sign-in" class="mx-3 mt-2 mb-1">
        <div>
          <label
            for="form-sign-in-username"
            class="col-form-label"
          >Username</label>
          <input class="form-control" id="form-sign-in-username" />
        </div>
        <div>
          <label
            for="form-sign-in-password"
            class="col-form-label"
          >Password</label>
          <input class="form-control" id="form-sign-in-password" />
        </div>
        <div class="container px-0">
          <div class="row mt-3 justify-content-evenly">
            <div class="col-3">
              <button type="submit" class="btn btn-dark">Submit</button>
            </div>
            <div class="col">
              <div class="mt-2 text-end">
                <p>Don't have a username?
                  <a href="/sign-up">Click here</a>
                  to sign up!</p>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>